@page "/addPurchase"
@inherits AddPurchaseBase
<link rel="stylesheet" href="css/Style.css" />

<EditForm Model="@purchaseDto" OnValidSubmit="AddPurchase" class="mt-4 mb-4">
    <DataAnnotationsValidator />

    <div class="product-form">
        <h3 class="mt-4 mb-4">Add Purchase</h3>
        <div class="form-group">
            <label for="ProductId" class="form-label">Purchase Id:</label>
            <input type="number" class="form-control" @bind="purchaseDto.PurchaseId" />
            @if (string.IsNullOrWhiteSpace(purchaseDto.PurchaseId.ToString()))
            {
                <div class="validation-message">
                    <span class="fw-bold" style="font-size: 0.9rem;"><ValidationMessage For="@(() => purchaseDto.PurchaseId.ToString())" /></span>
                </div>
            }
        </div>
        <div class="form-group">
            <label for="PurchaseDate" class="form-label">Purchase Date:</label>
            <input id="PurchaseDate" type="date" class="form-control" @bind="purchaseDto.PurchaseDate" />
            @if (purchaseDto.PurchaseDate == null)
            {
                <div class="validation-message">
                    <span class="fw-bold" style="font-size: 0.9rem;"><ValidationMessage For="@(() => purchaseDto.PurchaseDate)" /></span>
                </div>
            }
        </div>

        <div class="form-group">
            <label for="ProductId" class="form-label">Product Id:</label>
            <input type="number" class="form-control" @bind="purchaseDto.ProductId" />
            @if (purchaseDto.ProductId == null)
            {
                <div class="validation-message">
                    <span class="fw-bold" style="font-size: 0.9rem;"><ValidationMessage For="@(() => purchaseDto.ProductId)" /></span>
                </div>
            }
        </div>

        <div class="form-group">
            <label for="Quantity" class="form-label">Quantity:</label>
            <input id="Quantity" type="number" class="form-control" @bind="purchaseDto.Quantity" />
            @if (purchaseDto.Quantity == null)
            {
                <div class="validation-message">
                    <span class="fw-bold" style="font-size: 0.9rem;"><ValidationMessage For="@(() => purchaseDto.Quantity)" /></span>
                </div>
            }
        </div>

        <div class="form-group">
            <label for="SupplierName" class="form-label">Supplier Name:</label>
            <input id="SupplierName" type="text" class="form-control" @bind="purchaseDto.SupplierName" />
            @if (string.IsNullOrWhiteSpace(purchaseDto.SupplierName))
            {
                <div class="validation-message">
                    <span class="fw-bold" style="font-size: 0.9rem;"><ValidationMessage For="@(() => purchaseDto.SupplierName)" /></span>
                </div>
            }
        </div>

        <div class="form-group">
            <label for="InvoiceAmount" class="form-label">Invoice Amount:</label>
            <input id="InvoiceAmount" type="number" class="form-control" @bind="purchaseDto.InvoiceAmount" />
            @if (purchaseDto.InvoiceAmount == null)
            {
                <div class="validation-message">
                    <span class="fw-bold" style="font-size: 0.9rem;"><ValidationMessage For="@(() => purchaseDto.InvoiceAmount)" /></span>
                </div>
            }
        </div>

        <div class="form-group">
            <label for="InvoiceNo" class="form-label">Invoice No:</label>
            <input id="InvoiceNo" type="text" class="form-control" @bind="purchaseDto.InvoiceNo" />
            @if (string.IsNullOrWhiteSpace(purchaseDto.InvoiceNo))
            {
                <div class="validation-message">
                    <span class="fw-bold" style="font-size: 0.9rem;"><ValidationMessage For="@(() => purchaseDto.InvoiceNo)" /></span>
                </div>
            }
        </div>

        <div class="d-flex flex-column align-items-center mt-3">
            <div class="d-flex flex-column flex-md-row align-items-center">
               <button class="btn btn-primary mb-2" type="submit">Add Purchase</button>
            </div>
        </div>
    </div>
</EditForm>
