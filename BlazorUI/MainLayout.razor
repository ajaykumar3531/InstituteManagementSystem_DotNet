@inherits LayoutComponentBase

<style>
    .navbar {
        background-color: #E0FFFF; /* Light gray background color */
        padding: 15px 0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand {
        color: whitesmoke; /* Dark gray text color for brand */
        font-size: 24px;
        font-weight: bold;
    }

    .navbar-nav {
        margin-top: 10px;
    }

    .nav-item {
        margin-right: 15px;
    }

    .nav-link {
        color: #495057 !important; /* Dark gray text color for links */
        font-size: 18px;
    }

    .sticky-nav {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
        background-color: #ffffff; /* White background for sticky nav */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    footer{
          position: sticky;
          right:0;
          bottom:0;
          width:1000px;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
        <a class="navbar-brand" href="/" style="margin-left:35px">Inventory Management System</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="products">Product</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="stocks">Stock</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="purchases">Purchase</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="sales">Sale</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main>
    @Body
</main>

